<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:background="#ff015b65">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="窝行天下"
            android:textSize="20.0dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dp">
                <ImageButton
                     android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:background="@drawable/btn_top_record"
                    android:id="@+id/btn_top_record"
                    android:layout_marginBottom="10.0dip"
                    />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/btn_top_record">

                    <ImageButton android:id="@+id/btn_look_for_wowo"
                        android:background="@drawable/btn_look_for_wowo"
                        android:layout_width="0.0dip" android:layout_height="wrap_content"
                        android:layout_weight="1.0" />
                    <ImageButton android:id="@+id/btn_nearby_friend"
                        android:background="@drawable/btn_nearby_friend"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_weight="1.0" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/btn_my_own"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_my_own"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>








        </LinearLayout>
    </ScrollView>
</LinearLayout>
