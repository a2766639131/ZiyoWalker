<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fff8f8f8">
    <RelativeLayout android:background="#ff00c3d9"
        android:layout_width="fill_parent" android:layout_height="50.0dip">
        <ImageButton android:id="@+id/mymessage_btn_back" android:background="@drawable/btn_back"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
        <TextView android:textSize="20.0dip" android:textColor="#ffffffff"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="编辑个人信息" android:layout_centerInParent="true" />
        <ImageButton
            android:id="@+id/mymessage_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_save_mypage"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout android:layout_height="200.0dip"
        android:layout_width="fill_parent">
        <ImageButton
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:background="@drawable/no_image_user_icon"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵   称"
                android:layout_marginLeft="10.0dip"
                android:textSize="17.0dip"
                android:textStyle="bold"
                android:textColor="#ff666666"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_profile_edit"
                android:layout_marginRight="10.0dip"
                android:layout_marginLeft="10.0dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal"
            android:layout_marginTop="20.0dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="归属地"
                android:layout_marginLeft="10.0dip"
                android:textSize="17.0dip"
                android:textStyle="bold"
                android:textColor="#ff666666"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_profile_edit"
                android:layout_marginRight="10.0dip"
                android:layout_marginLeft="10.0dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal"
            android:layout_marginTop="20.0dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电   话"
                android:layout_marginLeft="10.0dip"
                android:textSize="17.0dip"
                android:textStyle="bold"
                android:textColor="#ff666666"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_profile_edit"
                android:layout_marginRight="10.0dip"
                android:layout_marginLeft="10.0dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:orientation="horizontal"
            android:layout_marginTop="20.0dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮   箱"
                android:layout_marginLeft="10.0dip"
                android:textSize="17.0dip"
                android:textStyle="bold"
                android:textColor="#ff666666"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_profile_edit"
                android:layout_marginRight="10.0dip"
                android:layout_marginLeft="10.0dip"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>