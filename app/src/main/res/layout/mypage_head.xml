<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:id="@+id/ll_mypage_header"
    >
    <LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80.0dip" android:layout_marginTop="10.0dip">
        <ImageView
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:background="@drawable/no_image_user_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10.0dip"/>
        <View android:background="#ffd8d8d8"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginRight="10.0dip"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:text="0"
                        android:id="@+id/footprintcount"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.0dip"
                        android:textColor="#ff9b9b9b"
                        android:text="足迹"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:text="0"
                        android:id="@+id/fanscount"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.0dip"
                        android:textColor="#ff9b9b9b"
                        android:text="粉丝"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0dip"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:text="0"
                        android:id="@+id/attentioncount"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.0dip"
                        android:textColor="#ff9b9b9b"
                        android:text="关注"
                        />
                </LinearLayout>

            </LinearLayout>
            <Button android:textSize="14.0dip" android:textColor="#ffffffff"
                android:id="@+id/btn_personalmesedit" android:background="@drawable/camp_name_bg"
                android:layout_width="fill_parent" android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip" android:layout_marginTop="5.0dip" android:text="个人资料编辑" />
            <!-- <Button android:textSize="14.0dip" android:textColor="#ffffffff"
                 android:id="@+id/btn_bind" android:background="@drawable/shape_bind"
                 android:visibility="gone" android:layout_width="fill_parent"
                 android:layout_height="31.0dip" android:layout_marginLeft="10.0dip"
                 android:layout_marginTop="5.0dip" android:layout_marginRight="10.0dip" android:text="关注" />
             <Button android:textSize="14.0dip" android:textColor="#ffffffff"
                 android:id="@+id/btn_unbind" android:background="@drawable/shape_unbind"
                 android:visibility="gone" android:layout_width="fill_parent"
                 android:layout_height="31.0dip" android:layout_marginLeft="10.0dip" android:layout_marginTop="5.0dip" android:layout_marginRight="10.0dip" android:text="取消关注" />
                 -->
        </LinearLayout>
    </LinearLayout>
    <TextView android:textSize="14.0dip" android:textColor="#ff999999"
        android:id="@+id/tv_city" android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip" android:layout_marginTop="5.0dip" />
    <TextView android:textSize="14.0dip" android:textColor="#ffa9a9a9"
        android:id="@+id/tv_description" android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip" />
</LinearLayout>